{
  "info": {
    "name": "Sweet Shop API",
    "description": "Postman collection for Sweet Shop backend (CRUD + auth + search/purchase/restock)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/auth/login" }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.test('status is 200', () => pm.response.to.have.status(200));",
              "pm.test('token present', () => pm.expect(json.token).to.be.a('string'));",
              "if (json.token) { pm.environment.set('token', json.token); }",
              "if (json.user) { pm.environment.set('userId', json.user.id); }"
            ]
          }
        }
      ]
    },
    {
      "name": "Sweets - Get All",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/sweets" }
      },
      "event": [
        {
          "listen": "test",
          "script": { "exec": [ "pm.test('status 200', () => pm.response.to.have.status(200));" ] }
        }
      ]
    },
    {
      "name": "Sweets - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Rasmalai\",\n  \"category\": \"Indian\",\n  \"price\": 50.00,\n  \"quantity\": 10,\n  \"description\": \"Delicious rasmalai\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/sweets" }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.test('created 201', () => pm.response.to.have.status(201));",
              "pm.test('price present', () => pm.expect(json.price).to.be.a('number'));",
              "if (json.id) pm.environment.set('createdSweetId', json.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Sweets - Get By Id",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/sweets/{{createdSweetId}}" }
      },
      "event": [
        { "listen": "test", "script": { "exec": [ "pm.test('status 200', () => pm.response.to.have.status(200));" ] } }
      ]
    },
    {
      "name": "Sweets - Update",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"price\": 49.5,\n  \"quantity\": 12\n}" },
        "url": { "raw": "{{baseUrl}}/sweets/{{createdSweetId}}" }
      },
      "event": [
        { "listen": "test", "script": { "exec": [ "pm.test('updated 200', () => pm.response.to.have.status(200));" ] } }
      ]
    },
    {
      "name": "Sweets - Delete",
      "request": {
        "method": "DELETE",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{baseUrl}}/sweets/{{createdSweetId}}" }
      },
      "event": [
        { "listen": "test", "script": { "exec": [ "pm.test('deleted 204', () => pm.response.to.have.status(204));" ] } }
      ]
    },
    {
      "name": "Sweets - Search",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/sweets/search?name=chocolate&minPrice=1&maxPrice=5" }
      },
      "event": [
        { "listen": "test", "script": { "exec": [ "pm.test('search 200', () => pm.response.to.have.status(200));" ] } }
      ]
    },
    {
      "name": "Sweets - Purchase",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{ \"quantity\": 2 }" },
        "url": { "raw": "{{baseUrl}}/sweets/{{createdSweetId}}/purchase" }
      },
      "event": [ { "listen": "test", "script": { "exec": [ "pm.test('purchase 200', () => pm.response.to.have.status(200));" ] } } ]
    },
    {
      "name": "Sweets - Restock",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{ \"quantity\": 5 }" },
        "url": { "raw": "{{baseUrl}}/sweets/{{createdSweetId}}/restock" }
      },
      "event": [ { "listen": "test", "script": { "exec": [ "pm.test('restock 200', () => pm.response.to.have.status(200));" ] } } ]
    }
  ]
}
